      <div class="container-fluid">
  
        <!-- Page Content -->
        <div class="container">
            <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="my-4">Create Post
                <small>Create your own posts here</small>
                </h1>





                <div class="card card-body">
                    <%- include ('partials/messages') %>
                    <form action="/create" method="POST">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                            <span class="input-group-text" id="title">Title</span>
                            </div>
                            <input type="title" class="form-control" id='title' name='title' aria-label="Enter Title"
                            value="<%= typeof title != 'undefined' ? title : '' %>"/>
                        </div>
                        <input type="hidden" id="author" name="author" value="<%= username %>">
                        
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                            <label class="input-group-text" for="category">Category</label>
                            </div>
                            <select class="custom-select" id="category" name="category" aria-label="Select Category">
                            <option hidden disabled selected value>Choose a Category</option>
                            <option value="cat1">Cat1</option>
                            <option value="cat2">Cat2</option>
                            <option value="cat3">Cat3</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <textarea type="bodytext" class="form-control" id="bodytext" name="bodytext" rows="10" aria-label="Enter Text"><%= typeof bodytext != 'undefined' ? bodytext : '' %></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>







                

            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Search Widget -->
                <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-append">
                        <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                    </div>
                </div>
                </div>

                <!-- Categories Widget -->
                <div class="card my-4">
                <h5 class="card-header">Categories</h5>
