      <div class="container-fluid">
  
        <!-- Page Content -->
        <div class="container">
            <div class="row">

                <div class="col-lg-8">
                  
                  <p><%- include ('partials/messages') %></p>
                    <!-- Title -->
                    <h1 class="mt-4" style="word-wrap:break-word"><%= post.title %></h1>
            
                    <!-- Author -->
                    <p class="lead">
                      by
                      <a href="/user/<%= post.username %>"><%= post.username %></a>
                      <% if (post.username == username) { %>
                        <a href='/edit/<%= post._id %>' type="button" class="btn1 btn-outline-primary1 float-right ml-1">
                          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                              <path fill-rule="evenodd" d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"></path>
                        </svg>
                        </a>
                        <a href='/delete/<%= post._id %>' type="button" class="btn1 btn-outline-primary1 float-right mx-1">
                          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                          </svg>
                        </a>
                      <% } %>
                      
                    </p>
            
                    <hr>
            
                    <!-- Date/Time -->
                    <p>Posted on <%= new Date(post.createdAt).toDateString() %> 
                      <% if (post.edited) { %>
                        <span class="text-muted float-right">Edited</span>
                      <% } %>
                    </p>
            
                    <hr>
            
                    <!-- Preview Image -->
                    <img class="img-fluid rounded" src="https://picsum.photos/seed/<%= post._id %>/900/400" alt="Random Image">
            
                    <hr>
            
                    <p class="text-left" style="word-wrap:break-word; white-space: pre-wrap"><%- post.postBody %></p>
            
                    <hr>
            
                    <!-- Comments Form -->
                    <div class="card my-4">
                      <h5 class="card-header">Leave a Comment:</h5>
                      <div class="card-body">
                        <form action="/comment/<%= post._id %>" method="POST">
                          <input type="hidden" id="postTitle" name="postTitle" value="<%= post.title %>">
                          <div class="form-group">
                            <textarea type="commentBody" id="commentBody" name="commentBody" class="form-control" rows="3"><%= typeof commentBody != 'undefined' ? commentBody : '' %></textarea>
                          </div>
                          <button type="submit" class="btn btn-primary">Submit</button>
                        </form>

                        <hr>

                        <% if (comments.length > 0) { %>
                          <% for (let comment of comments) { %>
                            <div class="media mb-4">
                              <a class="text-body" href="/user/<%= comment.username %>">
                                <img class="d-flex mr-3 rounded-circle" src="https://picsum.photos/seed/<%= comment.username %>/50" alt="User Image">
                              </a>
                              <div class="media-body">
                                <h5 class="mt-0"><a class="text-body" href="/user/<%= comment.username %>"><%= comment.username %></a></h5>
                                <%- comment.commentBody %>
                              </div>
                            </div>
                          <% } %>
                        <% } %>

                      </div>
                    </div>
                  </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Search Widget -->
                <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-append">
                        <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                    </div>
                </div>
                </div>

                <!-- Categories Widget -->
                <div class="card my-4">
                <h5 class="card-header">Categories</h5>
                <div class="card-body">
                    <div class="row">
                    <div class="col-lg-6">
