<div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
      <div class="sidebar-heading">Start Bootstrap </div>
      <div class="list-group list-group-flush">
        <a href="/user/<%= username %>" class="list-group-item list-group-item-action bg-light">Profile</a>
        <a href="/category/cat1" class="list-group-item list-group-item-action bg-light">Category 1</a>
        <a href="/category/cat2" class="list-group-item list-group-item-action bg-light">Category 2</a>
        <a href="/category/cat3" class="list-group-item list-group-item-action bg-light">Category 3</a>
      </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/home">Home<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href='/create'>Create</a>
            </li>
            <li class="nav-item dropdown <% if (username == user.username){ %>
               <%= "active" %>  
              <% } %>">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= username %>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="#">Action</a>
                <a class="dropdown-item" href="#">Another action</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/logout">Logout</a>
              </div>
            </li>
          </ul>
        </div>
      </nav>

      
  
        <!-- Page Content -->
        <div class="container">
            <br/>
            <div class="row">
            
            <!-- Blog Entries Column -->
            <div class="col-md-3" >
                
                    <div class="card mb-4" style="height:16rem; width:16rem;">
                      
                      <div class="card-body">
                        <p class="card-text" style="word-wrap:break-word">
                            <img class="card-img-top" src="https://picsum.photos/seed/<%= user.username %>/250" alt="Profile Picture">
                        </p>
                      </div>
                    </div>
                
            </div>

            <div class="col-md-9">
                <div class="card mb-4" style="height:16rem;">
                      
                        <div class="card-body">
                          <h3 class="card-title" style="word-wrap:break-word">Profile Details <small class="text-right text-muted"><%= user.username %></small></h3>
                          <hr>
                          <p class="card-text" style="word-wrap:break-word">
                            <h4>
                                Name:
                                <span class="text-muted">&nbsp;<%= user.fullname %></span>
                            </h4>
                            <br>
                            <h4>
                                Email:
                                <span class="text-muted">&nbsp;<%= user.email %></span>
                            </h4>
                            <br>
                            <h4>
                                DOB:
                                <span class="text-muted">&nbsp;<%= new Date(user.dob).toDateString().slice(4) %></span>
                            </h4>
                          </p>
                        </div>
                </div>
            </div>

            </div>
            <!-- /.row -->
            
            <div class="row">
                <div class="col-md-8" >

                    <h3 class="my-4">Activity</h1>
                        <hr>
                        <% if (posts.length > 0) { %>
                            <% for (let post of posts) { %>
                                <div class="card mb-4">
                                    <a href="/post/<%= post._id %>">
                                        <img class="card-img-top" src="https://picsum.photos/seed/<%= post._id %>/750/300" alt="Card image cap">
                                    </a>
                                <div class="card-body">
                                    <h2 class="card-title" style="word-wrap:break-word"><a href="/post/<%= post._id %>"><%= post.title %></a></h2>
                                    <p class="card-text" style="word-wrap:break-word"><%= post.postBody %></p>
                                </div>
                                </div>
                            <% } %>
                        <% } %>

                        <% if (comments.length > 0) { %>
                            <% for (let comment of comments) { %>
                                <div class="card mb-4 flex-row flex-wrap">
                                    <div class="card-header border-0">
                                        <a href="/post/<%= comment.postID %>">
                                            <img class="d-flex mr-3 rounded-circle" src="https://picsum.photos/seed/<%= comment.postID %>/50" alt="User Image">
                                        </a>
                                    </div>
                                  <div class="card-block px-2 py-2">
                                    <!-- div class="media mb-4" >
                                      <img class="d-flex mr-3 rounded-circle" src="https://picsum.photos/seed/<%= comment.username %>/50" alt="User Image">
                                      < div class="media-body" -->
                                        <h4 class="card-title" style="word-wrap:break-word"><a href="/post/<%= comment.postID %>"><%= comment.postTitle %></a></h4>
                                        <p class="card-text" style="word-wrap:break-word"><%= comment.commentBody %></p>
                                      <!-- /div>
                                    </div -->
                                  </div>
                                </div>
                            <% } %>
                        <% } %>
    
                </div>

            </div>
        </div>
        <!-- /.container -->
      
    </div>
    <!-- /#page-content-wrapper -->

</div>
  <!-- /#wrapper -->

  <!-- Footer -->
<footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Your Website 2020</p>
    </div>
    <!-- /.container -->
</footer>
